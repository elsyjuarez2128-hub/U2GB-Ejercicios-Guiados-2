import java.util.Scanner;

/**
 * Clase principal para probar la Cola con un men√∫ interactivo.
 *@autor Elsy Joselyn Godinez Juarez
*/
public class MainCola {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Cola<String> cola = new Cola<>();
        int opcion;

        do {
            System.out.println("\n===== MEN√ö DE COLA =====");
            System.out.println("1. Encolar (agregar elemento)");
            System.out.println("2. Desencolar (eliminar elemento)");
            System.out.println("3. Mostrar frente");
            System.out.println("4. Mostrar todos los elementos");
            System.out.println("5. Ver tama√±o");
            System.out.println("6. Verificar si est√° vac√≠a");
            System.out.println("0. Salir");
            System.out.print("Seleccione una opci√≥n: ");
            opcion = scanner.nextInt();
            scanner.nextLine(); // limpiar buffer

            switch (opcion) {
                case 1:
                    System.out.print("Ingrese un elemento: ");
                    String dato = scanner.nextLine();
                    cola.encolar(dato);
                    System.out.println("‚úÖ Elemento encolado correctamente.");
                    break;

                case 2:
                    String eliminado = cola.desencolar();
                    if (eliminado != null) {
                        System.out.println("üóëÔ∏è Elemento eliminado: " + eliminado);
                    }
                    break;

                case 3:
                    String frente = cola.frente();
                    if (frente != null) {
                        System.out.println("üëÄ Elemento en el frente: " + frente);
                    }
                    break;

                case 4:
                    cola.mostrar();
                    break;

                case 5:
                    System.out.println("üìè Tama√±o de la cola: " + cola.tamanio());
                    break;

                case 6:
                    System.out.println(cola.estaVacia() ? "‚ùå La cola est√° vac√≠a." : "‚úÖ La cola tiene elementos.");
                    break;

                case 0:
                    System.out.println("üëã Saliendo del programa...");
                    break;

                default:
                    System.out.println("‚ö†Ô∏è Opci√≥n no v√°lida, intente de nuevo.");
            }
        } while (opcion != 0);

        scanner.close();
    }
}
